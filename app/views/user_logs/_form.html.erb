<%= form_with(model: user_log, local: true) do |form| %>
  <% if user_log.errors.any? %>
    <div id="error_explanation">
      <h4><%= user_log.errors.count %> hata sebebiyle zaman kaydı oluşturulamadı:</h4>

      <ul>
        <% user_log.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <form>
    <div class="form-group">
      <%= form.label :zaman_tipi %>
      <%= form.select(
        :logType, 
        options_for_select([
          ['Zaman Tipi 1'], 
          ['Zaman Tipi 2'],
          ['Zaman Tipi 3'],
          ['Zaman Tipi 4']
        ]),
        {},
        class: 'form-control',
        id: 'log-type'
      )%>
    </div>

    <div class="form-group">
      <%= form.label 'Başlangıç Zamanı' %>
      <%= form.datetime_select :startTime, id: 'start-time' %>
    </div>

    <div class="form-group">
      <%= form.label 'Bitiş Zamanı' %>
      <%= form.datetime_select :finishTime, id: 'finish-time' %>
    </div>
    
    <div class="form-group">
      <%= form.label :yorum %>
      <%= form.text_area :comment, class: 'form-control', id: 'first-name' %>
    </div>

    <div class="form-group">
      <%= form.submit 'Zaman Kaydı Oluştur', class: 'btn btn-success' %>
    </div>
  </form>
<% end %>
