<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h4><%= user.errors.count %> hata sebebiyle kayıt olamadınız:</h4>

      <ul>
        <% user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email %>
  </div>

  <div class="field">
    <%= form.label :Şifre %>
    <%= form.password_field :password %>
  </div>

  <div class="field">
    <%= form.label :'Şifre(Tekrar)' %>
    <%= form.password_field :password_confirmation %>
  </div>

  <div class="field">
    <%= form.label :İsim %>
    <%= form.text_field :first_name %>
  </div>

  <div class="field">
    <%= form.label :soyisim %>
    <%= form.text_field :last_name %>
  </div>

  <div class="field">
    <%= form.check_box :admin %>
    <%= form.label :admin_olmak_istiyorum %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
